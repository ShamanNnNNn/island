<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.island.HelloController"
          hgap="5" vgap="5"
          style="-fx-background-color: lightblue;">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <!-- Настройка колонок -->
    <columnConstraints>
        <ColumnConstraints percentWidth="33"/>
        <ColumnConstraints percentWidth="33"/>
        <ColumnConstraints percentWidth="34"/>
    </columnConstraints>

    <!-- Настройка строк -->
    <rowConstraints>
        <RowConstraints percentHeight="33"/>
        <RowConstraints percentHeight="33"/>
        <RowConstraints percentHeight="34"/>
    </rowConstraints>

    <!-- Заполнение ячеек -->
    <children>
        <Label text="Ячейка 1" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 2" GridPane.columnIndex="1" GridPane.rowIndex="0"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 3" GridPane.columnIndex="2" GridPane.rowIndex="0"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 4" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 5" GridPane.columnIndex="1" GridPane.rowIndex="1"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 6" GridPane.columnIndex="2" GridPane.rowIndex="1"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 7" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 8" GridPane.columnIndex="1" GridPane.rowIndex="2"
               style="-fx-border-color: black; -fx-alignment: center;"/>
        <Label text="Ячейка 9" GridPane.columnIndex="2" GridPane.rowIndex="2"
               style="-fx-border-color: black; -fx-alignment: center;"/>
    </children>
</GridPane>